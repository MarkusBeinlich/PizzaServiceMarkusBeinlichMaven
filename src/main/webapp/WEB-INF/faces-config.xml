<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    <application>
        <locale-config>
            <default-locale>de</default-locale>
            <supported-locale>en</supported-locale>
            <supported-locale>fa</supported-locale>
        </locale-config>
        <resource-bundle>
            <base-name>messages</base-name>
            <var>msg</var>
        </resource-bundle>
    </application>
    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>toLogin</from-outcome>
            <to-view-id>/login.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    
        <navigation-case>
            <from-outcome>toCustomer</from-outcome>
            <to-view-id>/customer.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>toConfirmation</from-outcome>
            <to-view-id>/confirmation.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    
        <navigation-case>
            <from-outcome>orderSubmitted</from-outcome>
            <to-view-id>/menu.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>toAdmin</from-outcome>
            <to-view-id>/admin.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
</faces-config>
